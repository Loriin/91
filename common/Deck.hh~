#ifndef DECK_HH_
#define DECK_HH_

#include <string>

#include "Card.hh"

class Deck
{
public:
  Deck();
  ~Deck();
  bool			isEmpty();
  Card			drawCard();
  void			melt();

protected:
  Card			crateCard(Card::TYPE, Card::FACTION, std::size_t);
  void			cratePage(Card::TYPE);
  std::vector<Card>	_deck;
  std::size_t		_value[6][2];
};

#endif
